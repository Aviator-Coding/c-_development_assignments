<Window x:Class="EinsendeAufgaben_03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EinsendeAufgaben_03"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="650">
    <DockPanel LastChildFill="False">
        <Menu DockPanel.Dock="Top" >
            <MenuItem Header="Alles Löschen" Click="ActionDeleteAll"/>
            <MenuItem Header="Beenden" Click="ActionBeenden"/>
        </Menu>
        <StackPanel Margin="20" DockPanel.Dock="Top" Orientation="Horizontal">
            <Label Width="100">Title</Label>
            <TextBox Name="tbTitle" MinWidth="480">Lorem ipsum is placeholder text commonly used as a placeholder</TextBox>
        </StackPanel>
        <TextBox Name="tbContent" Margin="20" MaxWidth="620" DockPanel.Dock="Top" Height="200">Lorem ipsum is placeholder text commonly used as a placeholder</TextBox>
        <StackPanel Margin="20,0" DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Click="ActionDeleteAll">Alles Loeschen</Button>
            <Button Click="ActionBeenden" Margin="20,0,0,0">Alles Beenden</Button>
        </StackPanel>
        <Label Name="lblStatus" DockPanel.Dock="Bottom">Status:</Label>
    </DockPanel>
</Window>
