<Window x:Class="Lektion_02.DockPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lektion_02"
        mc:Ignorable="d"
        Title="DockPanel" Height="350" Width="450" Background="LightGray">
    <DockPanel LastChildFill="false">
        <Button DockPanel.Dock="Top" Height="20">Button 1</Button>
        <TextBox DockPanel.Dock="Top" Height="50" Background="LightCoral">Textbox 1</TextBox>
        <Button DockPanel.Dock="Left">Button 2</Button>
        <TextBox DockPanel.Dock="Right" Width="100" Background="LightCyan">
            TextBox 2
        </TextBox>
        <Button DockPanel.Dock="Bottom" Height="40">Button</Button>
        <TextBox DockPanel.Dock="Bottom" Background="LightSalmon">TextBox 3</TextBox>
    </DockPanel>
</Window>
