<Window x:Class="Lektion_02.Canvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lektion_02"
        mc:Ignorable="d"
        Title="Beispiel Canvas" Height="350" Width="400">
    <Canvas>
        <TextBox Canvas.Top="100" Canvas.Right="50" Height="30" Width="150">Test</TextBox>
        <TextBox Canvas.Left="10" Canvas.Top="45" Height="20" Width="200">Eine TextBox</TextBox>
        <Button Canvas.Left="55" Canvas.Right="50" Height="30" Background="Green">Button 1</Button>
        <Button Canvas.Right="55" Canvas.Bottom="50" Width="80" Height="30" Background="LightCoral">Button 2</Button>   
    </Canvas>
</Window>
