<Window x:Class="Lektion_02.StackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lektion_02"
        mc:Ignorable="d"
        Title="StackPanel" Height="350" Width="400">
    <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left">
        <TextBox Height="20" Width="200" Margin="10">TextBox</TextBox>
        <Button Width="90" Background="LightGreen">Button 1</Button>
        <TextBlock Height="150" Background="White" Margin="10">TextBlock</TextBlock>
        <Button Width="90" Background="LightCoral" Margin="10">Button 2</Button>
    </StackPanel>
</Window>
